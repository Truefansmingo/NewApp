<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp" >

    <ImageView
        android:id="@+id/saved_fav_product_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_correct_18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/saved_fav_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Product Name: "
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@id/saved_fav_product_image_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/saved_fav_product_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Product Price: "
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@id/saved_fav_product_image_view"
        app:layout_constraintTop_toBottomOf="@id/saved_fav_product_Location"/>

    <TextView
        android:id="@+id/saved_fav_product_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Product Location: "
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@id/saved_fav_product_image_view"
        app:layout_constraintTop_toBottomOf="@id/saved_fav_product_title"/>


    <TextView
        android:id="@+id/saved_fav_product_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Product Status: "
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@id/saved_fav_product_image_view"
        app:layout_constraintTop_toBottomOf="@id/saved_fav_product_Price"/>

    <ImageView
        android:id="@+id/saved_fav_product_fav_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_favorite_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
