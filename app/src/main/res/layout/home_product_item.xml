<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/home_item_iamge"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"/>

    <ImageView
        android:id="@+id/home_item_favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="6dp"
        android:src="@drawable/ic_favorite_24dp"
        app:tint="#e46363"
        app:layout_constraintRight_toRightOf="@id/home_item_iamge"
        app:layout_constraintBottom_toBottomOf="@id/home_item_iamge" />

    <TextView
        android:id="@+id/home_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"
        app:layout_constraintLeft_toLeftOf="@id/home_item_iamge"
        app:layout_constraintTop_toTopOf="@id/home_item_iamge"
        tools:text="productTitle"/>

    <TextView
        android:id="@+id/home_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginRight="60dp"
        app:layout_constraintLeft_toLeftOf="@id/home_item_iamge"
        app:layout_constraintTop_toTopOf="@id/home_item_iamge"
        tools:text="productPrice"/>

    <TextView
        android:id="@+id/home_item_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginRight="60dp"
        app:layout_constraintLeft_toLeftOf="@id/home_item_iamge"
        app:layout_constraintTop_toTopOf="@id/home_item_iamge"
        tools:text="productSeller"/>

</androidx.constraintlayout.widget.ConstraintLayout>

